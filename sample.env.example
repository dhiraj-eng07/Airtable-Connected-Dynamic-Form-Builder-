# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/airtable_forms
MONGODB_TEST_URI=mongodb://localhost:27017/airtable_forms_test

# Airtable OAuth
AIRTABLE_CLIENT_ID=your_airtable_client_id
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret
AIRTABLE_REDIRECT_URI=http://localhost:5000/api/auth/airtable/callback
AIRTABLE_SCOPE=data.records:read data.records:write schema.bases:read schema.bases:write

# JWT
JWT_SECRET=your_jwt_secret_key_32_chars_minimum
JWT_EXPIRE=7d

# Webhook
WEBHOOK_SECRET=your_webhook_secret